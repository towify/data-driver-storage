{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "lib": ["es2017", "es7", "es6", "es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["app/**/*.ts"],
  "exclude": [
    "../app",
    "/app/lib",
    "dist",
    "app/test",
    "node_modules/*",
    "towify",
    "towify-tar-resource",
    ".eslintcache",
    "npm-publish-cli.js"
  ]
}
